<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="390dp"
    android:layout_height="520dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_gravity="center">

    <androidx.cardview.widget.CardView
        android:layout_width="344dp"
        android:layout_height="470dp"
        app:cardCornerRadius="2dp"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:background="@drawable/main_background"
                android:text="付款完成"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:gravity="center"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="290dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_paysuccee"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#727272"
                    android:textSize="12dp"
                    android:text="2020/10/31  17:55"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="90dp"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <TextView
                        android:id="@+id/tv_confirm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#494242"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:text="NT$"
                        android:layout_alignBaseline="@+id/tv_confirmPrice"/>

                    <TextView
                        android:id="@+id/tv_confirmPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="90"
                        android:textColor="#494242"
                        android:textSize="60sp"
                        android:textStyle="bold"
                        android:layout_toRightOf="@+id/tv_confirm"/>

                </RelativeLayout>

            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="24dp"
                android:text="可至會員中心的消費紀錄查看消費明細"
                android:textColor="#494242" />

            <Button
                android:id="@+id/btn_succee_enter"
                android:layout_width="320dp"
                android:layout_height="63dp"
                android:layout_gravity="center"
                android:background="@drawable/main_background"
                android:text="確認"
                android:layout_marginTop="6dp"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btn_succee_close"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:elevation="50dp"
        android:background="@drawable/close"
        android:layout_gravity="right"/>

</FrameLayout>