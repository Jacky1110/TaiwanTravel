<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".pointshop.PointShopFragment"
    android:background="@color/lightGray">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="65dp">

        <WebView
            android:id="@+id/webView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageButton
            android:id="@+id/ib_record"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="20dp"
            android:padding="12dp"
            android:adjustViewBounds="true"
            android:elevation="8dp"
            android:scaleType="fitCenter"
            android:background="@drawable/shape_fab_button"
            app:layout_constraintBottom_toTopOf="@id/ib_go_back"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/ic_mall_order" />

        <ImageButton
            android:id="@+id/ib_go_back"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="20dp"
            android:padding="12dp"
            android:adjustViewBounds="true"
            android:elevation="8dp"
            android:scaleType="fitCenter"
            android:background="@drawable/shape_fab_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/ic_new_home_red" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        style="@style/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

</FrameLayout>