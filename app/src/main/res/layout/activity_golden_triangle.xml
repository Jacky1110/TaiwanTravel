<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/triangleBrown"
    tools:context=".argame.GoldenTriangleActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="@dimen/dp_350"
                android:layout_height="@dimen/dp_500"
                android:background="@drawable/bg_tran2"
                android:scaleType="fitCenter"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_180"
                android:orientation="vertical"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/btnImg1"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_30"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="fitXY"
                    android:src="@drawable/bg_treasure" />

                <ImageView
                    android:layout_width="@dimen/dp_45"
                    android:layout_height="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_2"
                    android:scaleType="fitXY"
                    android:src="@drawable/bg_mosque" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_25"
                android:layout_marginEnd="@dimen/dp_90"
                android:orientation="vertical"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/btnImg2"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_30"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="fitCenter"
                    android:src="@drawable/bg_treasure" />

                <ImageView
                    android:layout_width="@dimen/dp_45"
                    android:layout_height="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_2"
                    android:scaleType="fitCenter"
                    android:src="@drawable/bg_national_flag" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_35"
                android:orientation="vertical"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/horizontalLine">

                <ImageView
                    android:id="@+id/btnImg3"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_30"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="fitCenter"
                    android:src="@drawable/bg_treasure" />

                <ImageView
                    android:layout_width="@dimen/dp_70"
                    android:layout_height="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_2"
                    android:scaleType="fitXY"
                    android:src="@drawable/bg_park" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_120"
                android:layout_marginEnd="@dimen/dp_40"
                android:elevation="1dp"
                android:orientation="vertical"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/imageView">

                <ImageView
                    android:id="@+id/btnImg5"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_30"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="fitCenter"
                    android:src="@drawable/bg_treasure" />

                <ImageView
                    android:layout_width="@dimen/dp_70"
                    android:layout_height="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_2"
                    android:scaleType="fitCenter"
                    android:src="@drawable/bg_song" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_90"
                android:layout_marginEnd="@dimen/dp_105"
                android:orientation="vertical"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/btnImg6"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_30"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="fitCenter"
                    android:src="@drawable/bg_treasure" />

                <ImageView
                    android:layout_width="@dimen/dp_70"
                    android:layout_height="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_2"
                    android:scaleType="fitCenter"
                    android:src="@drawable/bg_cylinder" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_60"
                android:layout_marginEnd="@dimen/dp_50"
                android:orientation="vertical"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/verticalLine">

                <ImageView
                    android:id="@+id/btnImg4"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_30"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="fitCenter"
                    android:src="@drawable/bg_treasure" />

                <ImageView
                    android:layout_width="@dimen/dp_70"
                    android:layout_height="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_2"
                    android:scaleType="fitCenter"
                    android:src="@drawable/bg_song_field" />

            </LinearLayout>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/verticalLine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.53" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/horizontalLine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5" />

            <FrameLayout
                android:id="@+id/btnARBack"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginEnd="@dimen/dp_11"
                android:layout_marginBottom="@dimen/dp_15"
                android:background="@drawable/bg_ar_back"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="返回"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

            </FrameLayout>

            <ImageButton
                android:id="@+id/B1"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_14"
                android:background="@color/zxing_transparent"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toTopOf="@+id/verticalLine"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.086"
                app:layout_constraintStart_toStartOf="@+id/horizontalLine"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.121"
                app:srcCompat="@drawable/ic_bowl_1" />

            <ImageButton
                android:id="@+id/B2"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_14"
                android:background="@color/zxing_transparent"
                android:scaleType="fitXY"
                app:layout_constraintEnd_toStartOf="@+id/horizontalLine"
               app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="@dimen/dp_30"
                app:layout_constraintBottom_toBottomOf="parent"
                app:srcCompat="@drawable/ic_bow2" />

            <ImageButton
                android:id="@+id/B3"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_14"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_marginStart="@dimen/dp_30"
                android:background="@color/zxing_transparent"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toTopOf="@+id/verticalLine"
                app:layout_constraintStart_toEndOf="@+id/B2"
                app:srcCompat="@drawable/ic_bowl3" />

            <ImageButton
                android:id="@+id/B4"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_14"
                android:layout_marginTop="@dimen/dp_30"
                android:background="@color/zxing_transparent"
                android:scaleType="fitXY"
                android:layout_marginEnd="@dimen/dp_10"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/verticalLine"
                app:srcCompat="@drawable/ic_bowl4" />

            <ImageButton
                android:id="@+id/B5"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_14"
                android:background="@color/zxing_transparent"
                android:scaleType="fitXY"
                android:layout_marginStart="@dimen/dp_10"
                app:layout_constraintStart_toEndOf="@id/horizontalLine"
                app:layout_constraintTop_toBottomOf="@id/verticalLine"
                app:srcCompat="@drawable/ic_bowl5" />

            <ImageButton
                android:id="@+id/B6"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_14"
                android:layout_marginBottom="@dimen/dp_30"
                android:background="@color/zxing_transparent"
                android:scaleType="fitXY"
                app:layout_constraintEnd_toStartOf="@+id/horizontalLine"
                app:layout_constraintTop_toTopOf="@id/verticalLine"
                app:layout_constraintBottom_toBottomOf="parent"
                app:srcCompat="@drawable/ic_bowl6" />

            <ImageButton
                android:id="@+id/B7"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_14"
                android:background="@color/zxing_transparent"
                android:scaleType="fitXY"
                app:layout_constraintStart_toEndOf="@id/B4"
                app:layout_constraintTop_toBottomOf="@+id/B4"
                app:srcCompat="@drawable/ic_bowl7" />

            <ImageButton
                android:id="@+id/B8"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_14"
                android:background="@color/zxing_transparent"
                android:scaleType="fitXY"
                app:layout_constraintStart_toEndOf="@+id/B7"
                app:layout_constraintTop_toBottomOf="@+id/B7"
                app:srcCompat="@drawable/ic_bowl8" />

            <ImageButton
                android:id="@+id/B9"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_14"
                android:layout_marginTop="16dp"
                android:background="@color/zxing_transparent"
                android:scaleType="fitXY"
                app:layout_constraintStart_toEndOf="@+id/B8"
                app:layout_constraintTop_toTopOf="@+id/B8"
                app:srcCompat="@drawable/ic_bowl9" />

            <ImageButton
                android:id="@+id/B10"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_14"
                android:background="@color/zxing_transparent"
                android:scaleType="fitXY"
                app:layout_constraintStart_toEndOf="@+id/B9"
                app:layout_constraintTop_toBottomOf="@+id/B9"
                app:srcCompat="@drawable/ic_bowl10" />

            <ImageButton
                android:id="@+id/B11"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_14"
                android:layout_marginEnd="65dp"
                android:background="@color/zxing_transparent"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toBottomOf="@+id/B6"
                app:layout_constraintEnd_toStartOf="@+id/horizontalLine"
                app:layout_constraintTop_toTopOf="@+id/B6"
                app:layout_constraintVertical_bias="0.223"
                app:srcCompat="@drawable/ic_bowl11" />

            <ImageButton
                android:id="@+id/B12"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_14"
                android:background="@color/zxing_transparent"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/B11"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/B11"
                app:srcCompat="@drawable/ic_bowl12" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/menuSection"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="@dimen/dp_10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/tvMenuFalse"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="1dp"
            android:src="@drawable/ic_gold_user" />

        <ImageView
            android:id="@+id/tvMenuTrue"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="1dp"
            android:visibility="gone"
            android:src="@drawable/ic_gold_user"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <ImageButton
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:backgroundTint="@color/zxing_transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_gold_title"
        app:layout_constraintEnd_toStartOf="@id/menuSection"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/menuLayout"
        android:layout_width="@dimen/dp_100"
        android:layout_height="0dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_marginEnd="@dimen/dp_10"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@+id/menuSection"
        app:layout_constraintTop_toTopOf="@id/menuSection">

        <TextView
            android:id="@+id/tvMenuActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="sans-serif-condensed-light"
            android:paddingTop="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_5"
            android:text="活動說明"
            android:textAlignment="center"
            android:textColor="@color/black" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black" />

        <TextView
            android:id="@+id/tvMenuCoupon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="sans-serif-condensed-light"
            android:paddingTop="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_5"
            android:text="優惠券"
            android:textAlignment="center"
            android:textColor="@color/black" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>