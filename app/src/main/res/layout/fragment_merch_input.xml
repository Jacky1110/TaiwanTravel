<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/merchInputLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/brightGray"
    tools:context=".merch.checkout.MerchInputFragment">

    <TextView
        android:id="@+id/textview"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/typeRed"
        android:gravity="center"
        android:text="@string/title_checkout"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/ib_go_back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@android:color/transparent"
        android:elevation="5dp"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lightGray"
        app:layout_constraintTop_toBottomOf="@id/textview" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        android:background="@drawable/shape_line"
        android:elevation="10dp"
        app:layout_constraintDimensionRatio="1:0.6"
        app:layout_constraintTop_toBottomOf="@id/textview"
        tools:layout_editor_absoluteX="16dp">

        <TextView
            android:id="@+id/tv_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:maxLines="1"
            android:textColor="@color/darkGray"
            android:textSize="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="$"
            android:textColor="@color/darkGray"
            android:textSize="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_number" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="12dp"
        android:alignmentMode="alignMargins"
        android:columnCount="3"
        android:rowCount="4"
        android:useDefaultMargins="true"
        app:layout_constraintTop_toBottomOf="@id/constraintLayout">

        <Button
            android:id="@+id/btn_7"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:background="@drawable/shape_line"
            android:text="7"
            android:textSize="14dp"
            android:textColor="@color/darkGray" />

        <Button
            android:id="@+id/btn_8"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:background="@drawable/shape_line"
            android:text="8"
            android:textSize="14dp"
            android:textColor="@color/darkGray" />

        <Button
            android:id="@+id/btn_9"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:background="@drawable/shape_line"
            android:text="9"
            android:textSize="14dp"
            android:textColor="@color/darkGray" />

        <Button
            android:id="@+id/btn_4"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:background="@drawable/shape_line"
            android:text="4"
            android:textSize="14dp"
            android:textColor="@color/darkGray" />

        <Button
            android:id="@+id/btn_5"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:background="@drawable/shape_line"
            android:text="5"
            android:textSize="14dp"
            android:textColor="@color/darkGray" />

        <Button
            android:id="@+id/btn_6"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:background="@drawable/shape_line"
            android:text="6"
            android:textSize="14dp"
            android:textColor="@color/darkGray" />

        <Button
            android:id="@+id/btn_1"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:background="@drawable/shape_line"
            android:text="1"
            android:textSize="14dp"
            android:textColor="@color/darkGray" />

        <Button
            android:id="@+id/btn_2"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:background="@drawable/shape_line"
            android:text="2"
            android:textSize="14dp"
            android:textColor="@color/darkGray" />

        <Button
            android:id="@+id/btn_3"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:background="@drawable/shape_line"
            android:text="3"
            android:textSize="14dp"
            android:textColor="@color/darkGray" />

        <Button
            android:id="@+id/btn_00"
            android:layout_row="3"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:background="@drawable/shape_line"
            android:text="00"
            android:textSize="14dp"
            android:textColor="@color/darkGray" />

        <Button
            android:id="@+id/btn_0"
            android:layout_row="3"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:background="@drawable/shape_line"
            android:text="0"
            android:textSize="14dp"
            android:textColor="@color/darkGray" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/btn_clear"
            android:layout_row="3"
            android:layout_rowWeight="1"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:background="@drawable/shape_line"
            android:text="00"
            android:textColor="@color/darkGray">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_close_black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </GridLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_enter"
        android:layout_width="@dimen/dp_150"
        android:layout_height="@dimen/dp_40"
        android:layout_marginBottom="100dp"
        android:layout_marginEnd="10dp"
        android:visibility="gone"
        android:background="@drawable/merch_check_left_bg"
        app:layout_constraintEnd_toStartOf="@id/guideline8"

        app:layout_constraintTop_toBottomOf="@id/verticalLine">

        <ImageView
            android:id="@+id/image"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_scan"
            android:layout_marginStart="@dimen/dp_15"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_enter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="折扣折抵"
            android:textColor="@color/white"
            android:textSize="22dp"
            android:layout_marginEnd="@dimen/dp_15"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

<!--    <androidx.constraintlayout.widget.ConstraintLayout-->
<!--        android:id="@+id/layout_check"-->
<!--        android:layout_width="@dimen/dp_150"-->
<!--        android:layout_height="@dimen/dp_40"-->
<!--        android:layout_marginStart="10dp"-->
<!--        android:layout_marginBottom="100dp"-->
<!--        android:background="@drawable/merch_check_bg"-->
<!--        app:layout_constraintStart_toEndOf="@id/guideline8"-->
<!--        app:layout_constraintTop_toBottomOf="@id/horizontalLine">-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_check"
        android:layout_width="@dimen/dp_150"
        android:layout_height="@dimen/dp_40"
        android:background="@drawable/btn_rounded_red_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gridLayout">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginEnd="@dimen/dp_15"
            android:src="@drawable/ic_qr"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_15"
            android:text="結帳核銷"
            android:textColor="@color/white"
            android:textSize="22dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imageView6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/btn_check"
        android:layout_width="325dp"
        android:layout_height="50dp"
        android:background="@drawable/shape_button_gradient"
        android:text="確認"
        android:textColor="@color/white"
        android:textSize="22dp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/verticalLine" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/verticalLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.8" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>