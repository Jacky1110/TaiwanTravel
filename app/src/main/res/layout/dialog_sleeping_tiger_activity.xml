<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/guiHua">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="@dimen/dp_300"
        android:layout_height="@dimen/dp_600"
        android:background="@drawable/bg_ar_store"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@color/ar_bei_pu_sleeping_tiger_bg"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_300"
            android:scaleType="fitXY"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/bg_sleeping_tiger_activity01"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_300"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/bg_sleeping_tiger_activity02"/>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_20"
                android:orientation="vertical">

                <TextView
                    android:layout_marginTop="@dimen/dp_10"
                    android:id="@+id/textView17"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed-light"
                    android:gravity="center_horizontal"
                    android:text="活動方式"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/dp_10">

                    <TextView
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textColor="@color/ARAlphabet"
                        android:fontFamily="sans-serif-condensed-light"
                        android:text="遊戲時間：" />

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textColor="@color/ARAlphabet"
                        android:fontFamily="sans-serif-condensed-light"
                        android:text="111/4/月8~05/1" />

                </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp_10">

                <TextView
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="@color/ARAlphabet"
                    android:fontFamily="sans-serif-condensed-light"
                    android:text="遊戲地點：" />

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="@color/ARAlphabet"
                    android:fontFamily="sans-serif-condensed-light"
                    android:text="北埔魅力商圈" />

            </LinearLayout>

                <TextView
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/dp_10"
                    style="@style/txt_direction"
                    android:text="遊戲方式" />

                <TextView
                    android:layout_marginTop="@dimen/dp_10"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    style="@style/txt_direction"
                    android:text="1.點選「北埔商圈_睡虎帶路嚐美食」進入遊戲主畫面。" />

                <TextView
                    android:layout_marginTop="@dimen/dp_10"
                    style="@style/txt_direction"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:text="2.在遊戲主畫面點選睡虎，依據提示到任意店家尋找睡虎招牌，並掃描招牌上的隱藏小睡虎。" />

                <TextView
                    android:layout_marginTop="@dimen/dp_10"
                    style="@style/txt_direction"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:text="3. 找到3隻不同美食(含以上)的隱藏小睡虎，就可以獲得一份禮品兌換券。" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dp_10">

                    <TextView
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textColor="@color/ARAlphabet"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:fontFamily="sans-serif-condensed-light"
                        android:text=" 兌獎方式：" />

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textColor="@color/ARAlphabet"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:fontFamily="sans-serif-condensed-light"
                        android:text="                        到指定地點憑優惠券兌換禮品。" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dp_10">

                    <TextView
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textColor="@color/ARAlphabet"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:fontFamily="sans-serif-condensed-light"
                        android:text=" 兌獎地點：" />

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textColor="@color/ARAlphabet"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:fontFamily="sans-serif-condensed-light"
                        android:text="                        姜太公柿餅 (北埔鄉廟前街24號)" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <Button
                    android:id="@+id/bdBack"
                    android:layout_marginTop="@dimen/dp_70"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_ar_back"
                    android:text="返回" />

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>